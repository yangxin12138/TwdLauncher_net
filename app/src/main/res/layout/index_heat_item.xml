<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/index_heat_item_width"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_height="@dimen/index_heat_item_height"
    android:layout_marginTop="@dimen/index_heat_item_marginTop"
    android:id="@+id/heat_item">

    <LinearLayout
        android:duplicateParentState="true"
        android:id="@+id/LL_center"
        android:layout_width="@dimen/heat_width"
        android:layout_height="@dimen/heat_height"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="@dimen/index_heat_item_icon_padding">
        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="@dimen/heat_icon_width"
            android:layout_height="@dimen/heat_icon_height"
            android:scaleType="centerCrop"
            android:padding="5dp"
            />
        <TextView
            android:duplicateParentState="true"
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/white"
            android:textSize="@dimen/heat_label_textsize"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"/>
    </LinearLayout>
</FrameLayout>