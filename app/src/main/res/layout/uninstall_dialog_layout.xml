<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/unset_height"
    android:orientation="vertical"
    android:padding="@dimen/uninstall_padding"
    android:background="@drawable/gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="@dimen/unset_image_size"
            android:layout_height="@dimen/unset_image_size"/>
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="这是一个标题"
            android:textSize="@dimen/unset_text_size"
            android:textColor="@color/white"
            android:paddingStart="@dimen/uninstall_title_padding_start"
            android:gravity="center_vertical"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/unset_button_margintTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/unset_button_width"
            android:layout_height="wrap_content"
            android:text="@string/application_cancel"
            android:textSize="@dimen/unset_button_text_size"
            android:background="@drawable/selector_factory_btnbg"
            android:textColor="@color/selector_factory_textcolor"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_marginStart="@dimen/unset_cancel_marginStart"
             />
        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/unset_button_width"
            android:layout_height="wrap_content"
            android:text="@string/application_confirm"
            android:textColor="@color/selector_factory_textcolor"
            android:textSize="@dimen/unset_button_text_size"
            android:layout_marginStart="@dimen/unset_confirm_marginStart"
            android:layout_marginEnd="@dimen/unset_confirm_marginEnd"
            android:background="@drawable/selector_factory_btnbg"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>